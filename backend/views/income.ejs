<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FinanceFlow - Income</title>
    <link rel="stylesheet" href="income.css">
    <link rel="stylesheet" href="header.css">
    <script defer src="/income.js"></script>
</head>
<body>
    <!-- Header Section -->
    <%- include('header', { activePage: 'income' }) %>

    <!-- Main Layout -->
    <div class="dashboard-container">
        <div class="main-content">
            <h1 class="page-title">Income Management</h1>

            <!-- Income Summary Section -->
            <section class="income-summary-section">
                <h2>Income Summary</h2>
                <div class="summary-cards">
                    <div class="summary-card">
                        <h3>Total Monthly Income</h3>
                        <p>$0.00</p> <!-- Updated dynamically via JS -->
                    </div>
                    <div class="summary-card">
                        <h3>Total Yearly Income</h3>
                        <p>$0.00</p> <!-- Updated dynamically via JS -->
                    </div>
                    <div class="summary-card">
                        <h3>Top Income Source</h3>
                        <p>N/A</p> <!-- Updated dynamically via JS -->
                    </div>
                </div>
            </section>

            <!-- Income Sources Table -->
            <section class="income-sources-section">
                <h2>Your Income Sources</h2>
                <table id="incomeTable">
                    <thead>
                        <tr>
                            <th>Source Name</th>
                            <th>Amount ($)</th>
                            <th>Frequency</th>
                            <th>Last Received</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Table rows populated by JavaScript -->
                    </tbody>
                </table>
            </section>

            <!-- Add New Income Source Section -->
            <section class="add-income-section">
                <h2>Add New Income Source</h2>
                <form id="addIncomeForm">
                    <div class="form-group">
                        <label for="incomeName">Source Name:</label>
                        <input type="text" id="incomeName" name="incomeName" placeholder="e.g., Freelance Work" required>
                    </div>
                    <div class="form-group">
                        <label for="amount">Amount ($):</label>
                        <input type="number" id="amount" name="amount" step="0.01" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="frequency">Frequency:</label>
                        <select id="frequency" name="frequency">
                            <option value="one time">One Time</option>
                            <option value="weekly">Weekly</option>
                            <option value="monthly">Monthly</option>
                            <option value="yearly">Yearly</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="startDate">Start Date:</label>
                        <input type="date" id="startDate" name="startDate" required>
                    </div>
                    <button type="submit" class="add-btn">Add Income</button>
                </form>
            </section>
        </div>
    </div>
</body>
</html>
