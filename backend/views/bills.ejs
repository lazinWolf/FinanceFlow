<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FinanceFlow - Bills</title>
    <link rel="stylesheet" href="bills.css">
    <link rel="stylesheet" href="header.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
</head>
<body>

    <%- include('header', { activePage: 'bills' }) %>

    <!-- Main Layout -->
    <div class="dashboard-container">
        <div class="main-content">
            <h1 class="page-title">Bills & Subscriptions</h1>

            <!-- Recurring Bills Overview Section -->
            <section class="bills-overview-section">
                <h2>Recurring Bills Overview</h2>
                <div class="bills-summary-cards">
                    <div class="summary-card">
                        <h3>Total Bills</h3>
                        <p id="totalBills">0</p>
                    </div>
                    <div class="summary-card">
                        <h3>Upcoming Bills</h3>
                        <p id="upcomingBills">0</p>
                    </div>
                    <div class="summary-card">
                        <h3>Paid This Month</h3>
                        <p id="paidThisMonth">$0.00</p>
                    </div>
                </div>
            </section>

            <!-- Bills List Section -->
            <section class="bills-list-section">
                <h2>Your Recurring Bills</h2>
                <div class="sort-dropdown">
                    <label for="sortOptions">Sort by:</label>
                    <select id="sortOptions">
                        <option value="date">Date</option>
                        <option value="amount">Amount</option>
                    </select>
                </div>
                <table id="billsTable">
                    <thead>
                        <tr>
                            <th>Bill Name <i class="fas fa-sort"></i></th>
                            <th>Amount ($) <i class="fas fa-sort"></i></th>
                            <th>Frequency</th>
                            <th>Next Due Date <i class="fas fa-sort"></i></th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Dynamic content will be injected here by JS -->
                    </tbody>
                </table>
            </section>

            <!-- Add New Bill Section -->
            <section class="add-bill-section">
                <h2>Add New Bill</h2>
                <form id="addBillForm">
                    <div class="form-group">
                        <label for="billName">Bill Name:</label>
                        <input type="text" id="billName" name="billName" placeholder="e.g., Spotify Subscription" required>
                    </div>
                    <div class="form-group">
                        <label for="amount">Amount ($):</label>
                        <input type="number" id="amount" name="amount" step="0.01" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="frequency">Frequency:</label>
                        <select id="frequency" name="frequency">
                            <option value="weekly">Weekly</option>
                            <option value="monthly">Monthly</option>
                            <option value="yearly">Yearly</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="nextDate">Next Due Date:</label>
                        <input type="date" id="nextDate" name="nextDate" required>
                    </div>
                    <button type="submit" class="add-btn">Add Bill</button>
                </form>
            </section>
        </div>
    </div>

    <script src="bills.js"></script>
</body>
</html>
